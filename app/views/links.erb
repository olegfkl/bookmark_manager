<% if defined? username %>
        <h1>Hello, <%= username %></h1>
<% end %>
<ul id='links'>
  <% @links.each do |link| %>
  <li>
  Title: <%= link.title %>
    URL: <%= link.url %>
    Tag: <%= link.tags.map(&:name).join(', ') %>
</li>
<% end %>
</ul>
<form action='/links/new'>
<button type="submit" value='Add new link'>Add new link</button>
</form>
